{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/types/*.d.ts", "src/vendor/copyStatic.js"],
  "exclude": ["node_modules", "dist",]
}
